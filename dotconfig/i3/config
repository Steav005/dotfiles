bindsym XF86AudioPause exec python3 ~/.config/polybar/scripts/empris.py pauseall
bindsym XF86AudioNext exec exec python3 ~/.config/polybar/scripts/empris.py next
bindsym XF86AudioPrev exec exec python3 ~/.config/polybar/scripts/empris.py prev


